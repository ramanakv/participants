package trg.adapter;

public class TempReporterImpl implements TempReporter {
// no data required here

	CelciusReporter cr = new CelciusReporter();

	public void setTempInF(double tempF) {
		cr.setTemp(fToC(tempF));
	}

	public void setTempInC(double tempC) {
		cr.setTemp(tempC);
	}

	public double getTempInF() {
		return cToF(cr.getTemp());
	}

	public double getTempInC() {
		return cr.getTemp();
	}

	private double cToF(double c) {
		return ((c * 8 / 5) + 32);
	}

	private double fToC(double f) {
		return ((f-32)*5/9);
		
	}
}
