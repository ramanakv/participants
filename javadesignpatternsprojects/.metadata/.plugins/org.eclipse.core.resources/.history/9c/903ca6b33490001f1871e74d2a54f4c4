package factorypatternproject;

import java.util.Scanner;

public class FactoryMain {

	public static void main(String[] args) {

		Country gm = CountryFactory.getCountry("DEU");

		System.out.println(gm.getCountryCode());

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter amount in rupees");
		double rupees = sc.nextDouble();
		double rate = gm.getConversionRate();

		double amount = rupees / rate;
		System.out.println(rupees + " rupees is equal to " + amount + " " + gm.getCurrency());

	}

}
