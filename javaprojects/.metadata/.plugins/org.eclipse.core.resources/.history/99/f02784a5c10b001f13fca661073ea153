package com.db;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;



public class EmployeeDbService implements EmployeeService {

	@Override
	public Student getStudent(int id) {
		try {
			Connection con = DriverManager.getConnection("jdbc:postgresql://localhost/postgres", "postgres",
					"postgres");
			PreparedStatement pst = con.prepareStatement("select * from student where studentid =?");
			pst.setInt(1, id);
			ResultSet rs = pst.executeQuery();
			rs.next();
			Student s = new Student(id, rs.getString(2),rs.getFloat(3));
			return s;

		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;
	}

}
