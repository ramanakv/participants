package com.inherit;

public class InheritMain {

	public static void main(String[] args) {

		Person p;

		p = new Person("Some name", "Mumbai");
		p.displayDetails();

		System.out.println("====================================");
		p = new Employee("Srinidhi", "Hyderabad", 100, 34000);
		p.displayDetails();
		System.out.println("====================================");
		p = new Student("Sudhir", "Chennai", 11, 98.2);
		p.displayDetails();

	}

}
